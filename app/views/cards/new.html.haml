= render "./shared/header"
.registercardsnav
  %ul
    %li
      メルカリ＞
    %li
      マイページ＞
    %li
    
      支払い方法＞    
    %li
      クレジットカード情報
.registercards-wrapper
  = render './shared/sideBar'
  .registercards
    .registercards-head
      クレジットカード情報入力
    = form_tag(pay_cards_path method: :post, id: 'charge-form',  name: "inputForm") do
      .registercards-form__label
        %label カード番号
        %span.required 必須
      -# = f.text_field :number , class: "number" , placeholder: "半角数字のみ" , maxlength: "19"
      = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      .number-error 半角数字で入力してください
      %ul.creditcardslog
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/visa.svg?460707210", size:"48x20"
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/master-card.svg?460707210", size:"48x20"
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/saison-card.svg?460707210", size:"48x20"
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/jcb.svg?460707210", size:"48x20"
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/american_express.svg?460707210", size:"48x20"
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/dinersclub.svg?460707210", size:"48x20"
        %li
          = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/discover.svg?460707210", size:"48x20"
      .registercards-form__label
        %label 有効期限
        %span.required 必須
        .registercards-form__expirationdate
        -# = f.collection_select :creditcardmonths, Creditcardmonths.all ,:id,:name,{}, class: 'expirationmonth'

        -# %span 月
        -# = f.collection_select :creditcardyears, Creditcardyears.all ,:id,:name,{}, class: 'expirationyear'

        -# %span 年
        %select#exp_month{name: "exp_month", type: "text"}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        %span 月/
        %select#exp_year{name: "exp_year", type: "text"}
          %option{value: ""} --
          %option{value: "2019"}19
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %span 年

      .registercards-form__label
        %label セキュリティーコード
        %span.required 必須
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      -# = f.text_field :number , class: "cvc" , placeholder: "カード背面3~4桁の番号" , maxlength: "4"
      .required-error 必須項目です
      .aboutcardsbacknumber
        = fa_icon 'question-circle'
        カード裏面の番号とは?
      .registercardscards-under
        .btn#card_token
          = submit_tag '追加する', id: "token_submit"

= render './shared/footer'